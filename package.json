{
  "name": "interface-hacking",
  "version": "1.0.0",
  "description": "Biblioteca TypeScript para manipula√ß√£o de elementos DOM atrav√©s de hierarquia",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "npm run clean && npm run build:js && npm run build:types",
    "build:js": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js",
    "build:types": "dts-bundle-generator -o dist/index.d.ts src/index.ts",
    "dev": "npm run build:js -- --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "prepare": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "copilot:setup": "bash setup-copilot.sh",
    "copilot:setup:win": "setup-copilot.bat",
    "copilot:validate": "node -e \"console.log('üîç Validating Copilot configuration...'); const fs = require('fs'); const paths = ['.github/copilot-instructions.md', '.vscode/settings.json', '.vscode/extensions.json']; paths.forEach(p => console.log(fs.existsSync(p) ? '‚úÖ' : '‚ùå', p)); console.log('‚úÖ Validation complete!');\""
  },
  "keywords": [
    "dom",
    "hierarchy",
    "typescript",
    "interface",
    "hacking",
    "element-finder"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.6.0",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.23.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/interface-hacking.git"
  },
  "bugs": {
    "url": "https://github.com/username/interface-hacking/issues"
  },
